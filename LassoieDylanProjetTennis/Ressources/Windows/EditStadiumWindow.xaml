<Window x:Class="LassoieDylanProjetTennis.Ressources.Windows.EditStadiumWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LassoieDylanProjetTennis.Ressources.Windows"
        mc:Ignorable="d"
        Title="EditStadiumWindow" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Name of Stadium:" Style="{StaticResource LabelTextBlockStyle}"/>
            <TextBox x:Name="NameOfStadiumTextBox" Text="{Binding NameOfStadium}" IsReadOnly="True" Style="{StaticResource InputTextBoxStyle}"/>

            <TextBlock Text="Location:" Style="{StaticResource LabelTextBlockStyle}"/>
            <TextBox x:Name="LocationTextBox" Text="{Binding Location}" Style="{StaticResource InputTextBoxStyle}"/>

            <TextBlock Text="Number of Courts:" Style="{StaticResource LabelTextBlockStyle}"/>
            <TextBox x:Name="NbCourtsTextBox" Text="{Binding NbCourts}" Style="{StaticResource InputTextBoxStyle}"/>

            <Button Content="Save" Style="{StaticResource PrimaryButtonStyle}" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
