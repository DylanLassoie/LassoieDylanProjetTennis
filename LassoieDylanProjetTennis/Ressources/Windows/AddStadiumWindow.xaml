<Window x:Class="LassoieDylanProjetTennis.Ressources.Windows.AddStadiumWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LassoieDylanProjetTennis.Ressources.Windows"
        mc:Ignorable="d"
        Title="AddStadiumWindow" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Name of Stadium:" Style="{StaticResource LabelTextBlockStyle}"/>
            <TextBox x:Name="NameOfStadiumTextBox" Style="{StaticResource InputTextBoxStyle}"/>

            <TextBlock Text="Location:" Style="{StaticResource LabelTextBlockStyle}"/>
            <TextBox x:Name="LocationTextBox" Style="{StaticResource InputTextBoxStyle}"/>

            <TextBlock Text="Number of Courts:" Style="{StaticResource LabelTextBlockStyle}"/>
            <TextBox x:Name="NbCourtsTextBox" Style="{StaticResource InputTextBoxStyle}"/>

            <Button Content="Add" Style="{StaticResource PrimaryButtonStyle}" Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
